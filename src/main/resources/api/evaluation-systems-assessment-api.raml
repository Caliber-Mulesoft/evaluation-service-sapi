#%RAML 1.0
title: Evaluation Systems Assessment API

description: As a user, I can access the evaluation service of caliber.

types:
  assessment: !include DataTypes/assessmentDataType.raml
  grade: !include DataTypes/gradesDataType.raml

/grades:
 get:
  responses:
    200:
      body:
        application/json:
          type: grade[]
          examples:
            output: !include /Examples/gradesExample.raml

/assessments:
  get:
    responses:
      200:
        body:
          application/json:
            type: assessment[]
            examples:
              output: !include /Examples/assessmentExample.raml
              
/assessments/{id}:
  uriParameters:
    id:
      required: true
      type: integer
  get:
    responses:
      200:
        body:
          application/json:
            type: assessment[]
            examples:
              output: !include /Examples/assessmentExample.raml